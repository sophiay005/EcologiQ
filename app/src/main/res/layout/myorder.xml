<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp">

    <TextView
        android:id="@+id/textViewMyOrder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:backgroundTint="@color/teal_700"
        android:text="My Order"
        android:textAlignment="center"
        android:textColor="@color/teal_700"
        android:textSize="35dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Postal Address"
        android:textStyle="bold"
        android:ems="10"
        android:backgroundTint="@color/teal_200"
        android:padding="17dp"
        android:textSize="18dp"
        android:textColor="@color/teal_800" />

    <EditText
        android:id="@+id/editTextTextPostalAddress"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:layout_marginBottom="15dp"
        android:ems="10"
        android:inputType="textPostalAddress" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="145dp"
                    android:layout_height="194dp"
                    app:srcCompat="@drawable/axiologylipstick" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/editTextDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:inputType="date"
                        android:text="February 7, 2022 15:32 pm"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        android:textColor="@color/teal_800"/>

                    <Button
                        android:id="@+id/button"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:text="Delivery Tracking"
                        android:backgroundTint="@color/teal_200"/>

                    <Button
                        android:id="@+id/button2"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:text="Request for return"
                        android:backgroundTint="@color/teal_200"/>

                    <Button
                        android:id="@+id/button3"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:text="Write a review"
                        android:backgroundTint="@color/teal_200"/>


                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="145dp"
                    android:layout_height="194dp"
                    app:srcCompat="@drawable/dabherbmakeupmascarabar" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/editTextDate1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:inputType="date"
                        android:text="January 12, 2022 17:46 pm"
                        android:textStyle="bold"
                        android:textSize="15dp"
                        android:textColor="@color/teal_800"/>

                    <Button
                        android:id="@+id/button4"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:text="Delivery Tracking"
                        android:backgroundTint="@color/teal_200"/>

                    <Button
                        android:id="@+id/button5"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:text="Request for return"
                        android:backgroundTint="@color/teal_200"/>

                    <Button
                        android:id="@+id/button6"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:text="Write a review"
                        android:backgroundTint="@color/teal_200"/>


                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="145dp"
                    android:layout_height="194dp"
                    app:srcCompat="@drawable/plantmakeupshimmermist" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/editTextDate2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:inputType="date"
                        android:textSize="14dp"
                        android:text="November 23, 2021 02:56 pm"
                        android:textStyle="bold"
                        android:textColor="@color/teal_800"/>

                    <Button
                        android:id="@+id/button7"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:text="Delivery Tracking"
                        android:backgroundTint="@color/teal_200"/>

                    <Button
                        android:id="@+id/button8"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:text="Request for return"
                        android:backgroundTint="@color/teal_200"/>

                    <Button
                        android:id="@+id/button9"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:text="Write a review"
                        android:backgroundTint="@color/teal_200"/>


                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>


</LinearLayout>